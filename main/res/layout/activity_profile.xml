<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivites.ProfileActivity"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/wallpaper2"
>


    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/primray"
        app:cardCornerRadius="30dp"
        app:cardElevation="90dp"
        app:cardMaxElevation="20dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="CREATE PROFILE"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="75dp"
                android:backgroundTint="#aa40b4"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/personImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profilecam"/>

            </androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/personName"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/namebackground"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="screen"
                android:drawableStart="@drawable/ic_person"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="4dp"
                android:ems="15"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="#AAAAAA" />

            <!--            <EditText-->
            <!--                android:id="@+id/editTextDate"-->
            <!--                android:layout_width="220dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_marginTop="6dp"-->
            <!--                android:background="@drawable/namebackground"-->
            <!--                android:ems="10"-->
            <!--                android:hint="@string/birthday"-->
            <!--                android:inputType="date"-->
            <!--                android:padding="5dp"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textColorHint="#AAAAAA" />-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/set_up_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="#aa40b4"
                    android:text="set up profile"
                    android:textAllCaps="true"
                    app:cornerRadius="10dp" />

                <ProgressBar
                    android:id="@+id/progressSetUp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />


            </FrameLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

