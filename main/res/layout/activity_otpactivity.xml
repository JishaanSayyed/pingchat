<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Acitivites.OTPActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="236dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/verification_send"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="293dp" />

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#AAAAAA"
        android:layout_height="wrap_content"
        android:text="Enter the OTP send to +91-8451955617" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        
        <EditText
            android:id="@+id/inputOne"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:importantForAutofill="no"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            tools:ignore="LabelFor"
            android:textColor="@color/black"
            android:imeOptions="actionNext"/>
        <EditText
            android:id="@+id/inputTwo"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:importantForAutofill="no"
            android:textSize="24sp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:textColor="@color/black"
            android:imeOptions="actionNext"/>
        <EditText
            android:id="@+id/inputThree"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginRight="5dp"
            android:importantForAutofill="no"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:textColor="@color/black"
            android:imeOptions="actionNext"/>
        <EditText
            android:id="@+id/inputFour"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginRight="5dp"
            android:importantForAutofill="no"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:textColor="@color/black"
            android:imeOptions="actionNext"/>
        <EditText
            android:id="@+id/inputFive"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:importantForAutofill="no"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            tools:ignore="LabelFor"
            android:textColor="@color/black"
            android:imeOptions="actionNext"/>
        <EditText
            android:id="@+id/inputSix"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginRight="5dp"
            android:maxLength="1"
            android:importantForAutofill="no"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:textColor="@color/black"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:elevation="20dp"
        android:padding="10dp"
        android:text="Proceed &amp; Verify"
        android:textAllCaps="true"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="10dp" />

        <ProgressBar
            android:id="@+id/progressOTP"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#AAAAAA"
        android:layout_height="wrap_content"
        android:text="Didn't Received OTP?" />
    <TextView
        android:id="@+id/resendOTP"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Resend OTP" />

</LinearLayout>